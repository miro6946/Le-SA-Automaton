<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">
<sqlMapConfig>

	<!--The properties (name=value) in the file specified here can be used placeholders in this config file (e.g.
	“${driver}”. The file is usually relative to the classpath and is optional. -->
	<properties resource="db.properties" />
	<!--These settings control SqlMap configuration details, primarily to do with transaction
	management. They are all optional (see the Developer Guide for more). -->
	<settings
			cacheModelsEnabled="true"
			enhancementEnabled="true"
			lazyLoadingEnabled="true"
			maxRequests="128"
			maxSessions="64"
			maxTransactions="64"
			useStatementNamespaces="false"
	/>
	<!--Type aliases allow you to use a shorter name for long fully qualified class names. -->
	<!--<typeAlias alias="order" type="testdomain.Order"/>-->
	<!--Configure a datasource to use with this SQL Map using SimpleDataSource.
	Notice the use of the properties from the above resource -->
	
	<typeHandler javaType="boolean" callback="kr.lesaautomaton.utils.YNTypeHandlerCallback" jdbcType="CHAR"/>
	<!-- 
	<typeHandler javaType="string" callback="kr.lesaautomaton.utils.ClobTypeHandler" jdbcType="CLOB"/>
	 -->
	
	<transactionManager type="JDBC" >
		<!-- 
		<dataSource type="SIMPLE">
			<property name="JDBC.Driver" value="${driver}"/>
			<property name="JDBC.ConnectionURL"
			value="${url}"/>
			<property name="JDBC.Username" value="${username}"/>
			<property name="JDBC.Password" value="${password}"/>
		-->		
		<dataSource type="DBCP">
			<property name="driverClassName" value="${driver}"/>
			<property name="url" value="${url}"/>
			<property name="username" value="${username}"/>
			<property name="password" value="${password}"/>
			<property name="maxActive" value="40"/>
			<property name="maxIdle" value="20"/>
			<property name="maxWait" value="600000"/>
			<property name="validationQuery" value="select 1 from dual"/>
			<property name="testWhileIdle" value="true"/>
			<property name="timeBetweenEvictionRunsMillis" value="600000"/>
			<!--			
			<property name="removeAbandoned" value="true"/>
			<property name="removeAbandonedTimeout" value="600"/>
			<property name="logAbandoned" value="false"/>
			 -->						
		</dataSource>
	</transactionManager>
	
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/ApplicationSetup.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Member.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Group.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Attachment.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Zipcode.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Notice.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/FormDatum.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Faq.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Donation.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/DonationBook.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/DonationGroup.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/DonationReceiver.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/DonationRequest.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/DonationQuantityDatum.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Loan.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Board.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Message.xml"/>
	<sqlMap resource="kr/lesaautomaton/persistence/dao/xml/Inform.xml"/>
